# VirtualDoc Backend Environment Configuration
# Copy this file to .env and update with your production values

# Server Configuration
PORT=5001
NODE_ENV=production

# Database Configuration (MongoDB Atlas)
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/your_database?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long-for-production

# StreamChat Configuration (Optional - for real-time chat features)
STREAM_CHAT_API_KEY=your_stream_chat_api_key
STREAM_CHAT_API_SECRET=your_stream_chat_api_secret

# Frontend URL Configuration (for CORS)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Production Security Settings
BCRYPT_SALT_ROUNDS=12
JWT_EXPIRES_IN=7d